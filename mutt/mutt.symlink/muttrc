set my_user="nage_se"

### General mailbox settings
set header_cache = "~/.cache/mutt"
set imap_check_subscribed
set imap_keepalive = 300
unset imap_passive
set mail_check = 60
set mbox_type=Maildir

### Receiving
set folder=imaps://$my_user@mail.kbee.lan
set imap_user=$my_user
set spoolfile=+INBOX
set imap_check_subscribed

### Sending
set record = +Sent
set realname = "Sebastian Nagel"
set from = $my_user@kbee.ag
set use_from = yes
set smtp_url=smtps://$my_user@mail.kbee.lan
set ssl_force_tls = yes
set ssl_starttls = yes

### Colors
color hdrdefault blue black
color quoted blue black
color signature blue black
color attachment brightmagenta black
color message cyan black
color error brightred black
color indicator black blue
color status brightgreen black
color tree white black
color normal white black
color markers red black
color search white black
color tilde brightmagenta black
color index blue black ~F
color index red black "~N|~O"

### Viewing HTML
set mailcap_path  = ~/.mutt/mailcap
auto_view text/html
alternative_order text/plain text/html

### Sidebar
set sidebar_width=25
set sidebar_visible=yes
set sidebar_delim='|'
set sidebar_sort=yes

macro index b "<enter-command>toggle sidebar_visible<enter>" "toggle sidebar"
macro pager b "<enter-command>toggle sidebar_visible<enter>" "toggle sidebar"

# Ctrl-n, Ctrl-p to select next, previous folder.
# Ctrl-o to open selected folder.
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open
