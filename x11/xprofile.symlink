#!/bin/bash

# Selected set of gnome tools
gnome-settings-daemon &
eval `gnome-keyring-daemon --start`

# Screensaver 5min, monitor suspend 6min, monitor off 7min
xset dpms 0 360 420
xset s blank
xset s 300

xset r rate 200 60

# Set a custom dpi
xrandr --dpi 120

# Load gnome settings
#gnomeconf=${HOME}/.config/dconf/gnome.conf
#test -s $gnomeconf && cat $gnomeconf | dconf load /

# Desktop wallpaper
feh --bg-scale $DOTFILES/x11/arch-linux-15408.png

exec herbstluftwm
